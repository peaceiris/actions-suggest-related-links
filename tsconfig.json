{
  "compilerOptions": {
    "target": "es2019", // TODO: es2020 https://github.com/actions/runner/issues/772
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./actions/dist",
    "rootDir": "./actions",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
